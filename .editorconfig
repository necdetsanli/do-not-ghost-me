# EditorConfig helps maintain consistent coding styles between different editors and IDEs
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.md]
# Do not trim trailing whitespace in markdown files (useful for lists)
trim_trailing_whitespace = false

[*.{yml,yaml,json}]
indent_size = 2

[*.{ts,tsx,js,jsx}]
indent_size = 2
indent_style = space

[*.{md,mdx}]
max_line_length = off

