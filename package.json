{
  "name": "do-not-ghost-me",
  "version": "1.3.0",
  "private": true,
  "license": "AGPL-3.0-or-later",
  "description": "Report recruitment ghosting in a privacy-safe way.",
  "engines": {
    "node": ">=24",
    "npm": ">=11.7.0"
  },
  "packageManager": "npm@11.7.0",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "postinstall": "prisma generate",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:ci": "vitest --runInBand",
    "test:e2e": "playwright test",
    "test:e2e:coverage:to-nyc": "node scripts/coverage/playwright-to-nyc.mjs",
    "test:e2e:coverage:report": "nyc report --reporter=lcov --reporter=text --report-dir=coverage/e2e",
    "test:e2e:coverage": "npm run test:e2e && npm run test:e2e:coverage:to-nyc && npm run test:e2e:coverage:report",
    "coverage:merge": "lcov-result-merger \"coverage/**/lcov.info\" \"coverage/lcov.info\"",
    "coverage:all": "npm run test:coverage && npm run test:e2e:coverage && npm run coverage:merge",
    "verify": "npm run lint && npm run check && npm run test && npm run test:e2e",
    "verify:ci": "npm run lint && npm run check && npm run test:ci && npm run test:e2e",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy",
    "seed:dummy": "node scripts/dev/seed-dummy-reports.js",
    "docs:api": "typedoc",
    "docs:clean": "rimraf docs/api",
    "docs:clean:all": "rimraf docs && node -e \"require('fs').mkdirSync('docs',{recursive:true})\""
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-navigation-menu": "^1.2.14",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@vercel/speed-insights": "^1.3.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.562.0",
    "next": "16.1.0",
    "next-themes": "^0.4.6",
    "pg": "^8.16.3",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/node": "^24.0.0",
    "@types/pg": "^8.16.0",
    "@types/react": "^19.2.3",
    "@types/react-dom": "^19.2.3",
    "@vitest/coverage-v8": "^4.0.16",
    "depcheck": "^1.4.7",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.2",
    "eslint-config-next": "16.1.0",
    "glob": "13.0.0",
    "istanbul-lib-coverage": "3.2.2",
    "jsdom": "^27.3.0",
    "lcov-result-merger": "5.0.1",
    "nyc": "17.1.0",
    "prettier": "^3.7.4",
    "prisma": "^7.2.0",
    "rimraf": "^6.1.2",
    "tailwindcss": "^4.1.18",
    "typedoc": "^0.28.15",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "^5",
    "v8-to-istanbul": "9.3.0",
    "vitest": "^4.0.16"
  }
}
