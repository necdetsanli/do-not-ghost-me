{
  "name": "do-not-ghost-me",
  "version": "0.1.0",
  "private": true,
  "description": "Report recruitment ghosting in a privacy-safe way.",
  "engines": {
    "node": ">=22",
    "npm": ">=11.6.4"
  },
  "packageManager": "npm@11.6.4",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",

    "lint": "eslint .",
    "check": "tsc --noEmit",

    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",

    "verify": "npm run lint && npm run check && npm run test && npm run test:e2e",

    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy",

    "seed:dummy": "node scripts/dev/seed-dummy-reports.js",

    "format": "prettier --write ."
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.1.0",
    "@prisma/client": "^7.1.0",
    "next": "16.0.7",
    "pg": "^8.16.3",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/pg": "^8.15.6",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitest/coverage-v8": "^4.0.15",
    "eslint": "^9",
    "eslint-config-next": "16.0.7",
    "prettier": "^3.7.4",
    "prisma": "^7.1.0",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vitest": "^4.0.15"
  }
}
